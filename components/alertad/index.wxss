.c_alert_wrap {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    height: 100vh;
    background-color: rgba(0,0,0,.6);
}

.alert_ad_box,.c_alert_wrap {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.alert_ad_box ad {
    width: 80%;
    padding: 10px 2px;
    background-color: #fff;
    border-radius: 5px;
}

.bor {
    height: 25px;
    width: 2px;
    background-color: #fff;
}

.close {
    width: 30px;
    height: 50px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.close_img {
    width: 24px;
    height: 24px;
}