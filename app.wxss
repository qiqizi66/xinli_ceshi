.container_01::after {
  position: absolute;
  top: 0;
  left: 0;
  content: "";
  width: 100%;
  height: 850rpx;
  background: linear-gradient(145deg,#5a0aff,#7200ff);
  border-bottom-right-radius: 60%;
}

.container_01::before {
  position: absolute;
  top: 250rpx;
  right: 0;
  content: "";
  width: 100%;
  height: 600rpx;
  background: linear-gradient(245deg,#ff874b,#ff593f);
  border-bottom-left-radius: 100%;
}

.container_02::after {
  position: absolute;
  top: 0;
  left: -700rpx;
  content: "";
  width: 1400rpx;
  height: 900rpx;
  background: linear-gradient(45deg,#5a0aff,#7200ff);
  transform: skewX(45deg);
  border-bottom-right-radius: 60%;
}

.container_02::before {
  position: absolute;
  top: 0;
  right: -30%;
  content: "";
  width: 100%;
  height: 880rpx;
  background: linear-gradient(120deg,#ff593f,#ff874b);
  border-bottom-left-radius: 70%;
  border-bottom-right-radius: 80%;
}

.container_03::after {
  top: 0;
  left: 1200rpx;
  background: linear-gradient(0deg,#5a0aff,#7200ff);
  transform-origin: 0 0;
  transform: rotateZ(145deg);
}

.container_03::after,.container_03::before {
  position: absolute;
  content: "";
  width: 820px;
  height: 820rpx;
}

.container_03::before {
  top: -100rpx;
  right: -820rpx;
  background: linear-gradient(125deg,#ffb73c,#fdcf10);
  transform: rotateZ(215deg);
}

.container_04::after {
  height: 620rpx;
  background: linear-gradient(0deg,#5a0aff,#7200ff);
}

.container_04::after,.container_04::before {
  position: absolute;
  top: 0;
  left: -50%;
  content: "";
  width: 200%;
  border-radius: 0 0 50% 50%;
}

.container_04::before {
  height: 900rpx;
  background: linear-gradient(90deg,#3bb6ff,#4bcdfb);
}

.container_05::after {
  height: 700rpx;
  background: linear-gradient(0deg,#5a0aff,#7200ff);
  border-radius: 0 0 50% 45%;
}

.container_05::after,.container_05::before {
  position: absolute;
  top: 0;
  left: -50%;
  content: "";
  width: 200%;
}

.container_05::before {
  height: 900rpx;
  background: linear-gradient(90deg,#00c495,#1ae67c);
  border-radius: 0 0 50% 150%;
}

