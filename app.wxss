.title_box {
  width: 100%;
  position: fixed;
  z-index: 2;
}

.blank {
  height: 60rpx;
  width: 100%;
}

.top_title {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: #fff;
}

.title_box_active {
  background-color: #f7f8fd;
  padding-bottom: 10rpx;
}

.title_box_active .top_title {
  color: #333;
}

.recommend {
  padding: 40rpx 30rpx 30rpx;
}

.recommend .title {
  height: 50rpx;
  color: #000;
  font-size: 34rpx;
  line-height: 50rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.recommend .title .title_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.recommend .list .item {
  border-radius: 20rpx;
  background-color: #fff;
  padding: 30rpx 16rpx;
  display: flex;
  align-items: flex-start;
  flex-direction: row;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,.04);
  margin-bottom: 16rpx;
}

.recommend .list .item .theme {
  width: 134rpx;
  height: 134rpx;
  border-radius: 20rpx;
}

.recommend .list .item .item_right {
  padding-left: 26rpx;
  flex: 1;
}

.recommend .list .item .item_title {
  color: #000;
  font-size: 34rpx;
  line-height: 48rpx;
  -webkit-line-clamp: 2;
  margin-bottom: 10rpx;
}

.recommend .list .item .item_des,.recommend .list .item .item_title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.recommend .list .item .item_des {
  color: #999;
  font-size: 25rpx;
  line-height: 36rpx;
  height: 36rpx;
  -webkit-line-clamp: 1;
}

.recommend .list .item .item_bottom {
  padding-top: 6rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recommend .list .item .item_bottom .item_bottom_inner {
  display: flex;
  align-items: center;
  height: 40rpx;
  position: relative;
  top: 10rpx;
}

.recommend .list .item .item_bottom .icon {
  width: 23rpx;
  height: 29rpx;
  margin-right: 16rpx;
}

.recommend .list .item .item_bottom .text {
  color: #414141;
  font-size: 22rpx;
  line-height: 40rpx;
  position: relative;
  top: 5rpx;
}

.recommend .list .item .item_bottom .item_btn {
  color: #6b03ff;
  font-size: 24rpx;
  background: #f7f3ff;
  height: 55rpx;
  width: 154rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 6rpx solid #6a04ff;
  border-radius: 55rpx;
  position: relative;
  top: 10rpx;
  right: 10rpx;
}

