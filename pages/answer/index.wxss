.container {
  width: 100%;
  min-height: 100vh;
  position: relative;
}

.container_all {
  background-image: linear-gradient(180deg,#5a0aff 0,#7200ff);
}

.container_bg {
  width: 100%;
  min-height: inherit;
  background-image: linear-gradient(90deg,#5618d7 5%,transparent 0),linear-gradient(#5618d7 5%,transparent 0);
  background-size: 24rpx 24rpx;
}

.wrap {
  position: relative;
  z-index: 1;
}

.answer {
  padding: 60rpx 30rpx 30rpx;
}

.answer_option {
  font-size: 46rpx;
  margin-bottom: 16rpx;
}

.answer_option,.answer_title {
  text-align: center;
  color: #fff;
  line-height: 65rpx;
}

.answer_title {
  padding-top: 50rpx;
  font-size: 36rpx;
  margin-bottom: 40rpx;
}

.answer_title_pad {
  margin-bottom: 140rpx;
}

.answer_card {
  position: relative;
  width: 100%;
  background-color: #fff;
  min-height: 200rpx;
  box-sizing: border-box;
  padding: 30rpx;
  border: 8rpx solid #9499f5;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 0 0 #3b00a1;
}

.answer_card_title {
  font-size: 40rpx;
  color: #6418fc;
  line-height: 52rpx;
  text-align: center;
  font-weight: 700;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 540rpx;
  height: 220rpx;
  box-sizing: border-box;
  background-repeat: no-repeat;
  background-size: contain;
  margin: -150rpx auto 30rpx;
}

.answer_card_title_box {
  width: 360rpx;
}

.answer_card_title_box_1 {
  position: relative;
  top: -10rpx;
  left: -20rpx;
}

.answer_card_title .star {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.answer_card_title .star .star1 image,.answer_card_title .star .star2 image {
  width: 50rpx;
  height: 50rpx;
}

.answer_card_content {
  font-size: 36rpx;
  padding: 30rpx 0;
  color: #212121;
  line-height: 60rpx;
  text-indent: 2em;
}

.answer_btns {
  padding: 50rpx 0 74rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.answer_repeat_btn {
  background: #f7f0ff;
  border-radius: 50rpx;
  line-height: 100rpx;
  color: #7200ff;
  margin-right: 20rpx;
}

.answer_repeat_btn,.answer_share_btn {
  width: 270rpx !important;
  height: 100rpx !important;
  text-align: center !important;
  font-size: 34rpx !important;
  display: flex;
    justify-content: center;
    align-items: center;
}

.answer_share_btn {
  box-sizing: border-box;
  background: #5a0aff;
  border-radius: 50rpx;
  line-height: 86rpx;
  border: 7rpx solid #03fdf5;
  color: #fff;
}

.answer_share_btn:after {
  border: none;
}

.answer_card .circle {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100rpx;
  height: 74rpx;
  content: "";
  background-color: #f7f0ff;
  border-bottom-left-radius: 30rpx;
  border-top-right-radius: 100%;
}

.answer_card .circle2 {
  left: 120rpx;
  bottom: 60rpx;
  width: 26rpx;
  height: 26rpx;
}

.answer_card .circle2,.answer_card .circle3 {
  position: absolute;
  content: "";
  background-color: #f7f0ff;
  border-radius: 100%;
}

.answer_card .circle3 {
  left: 160rpx;
  bottom: 20rpx;
  width: 15rpx;
  height: 15rpx;
}

.alert_info {
  width: 100%;
  font-size: 26rpx;
  color: #757575;
  line-height: 37rpx;
  text-align: center;
}

.recommend .title {
  color: #fff;
  font-size: 26rpx;
  line-height: 38rpx;
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}