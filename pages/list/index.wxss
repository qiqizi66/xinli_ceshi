.container,.container_list {
  background-color: #f7f8fd;
}

.container {
  width: 100%;
  height: auto;
  position: relative;
}

.container::after {
  left: 0;
  background: linear-gradient(145deg,#7200ff,#7200ff);
  border-bottom-right-radius: 100%;
}

.container::after,.container::before {
  position: absolute;
  top: 0;
  content: "";
  width: 100%;
  height: 500rpx;
}

.container::before {
  right: 0;
  background: linear-gradient(245deg,#ff874b,#ff593f);
  border-bottom-left-radius: 100%;
}

.blank {
  height: 60rpx;
  width: 100%;
}

.wrap {
  position: relative;
  z-index: 1;
}

.recommend {
  padding-top: 60rpx;
}